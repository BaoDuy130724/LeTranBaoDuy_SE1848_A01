<Window x:Class="LeTranBaoDuyWPF.CustomerEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeTranBaoDuyWPF"
        mc:Ignorable="d"
        Title="LeTranBaoDuy-SE182424-CustomerEditWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Company Name:" Margin="5" Grid.Row="0" Grid.Column="0"/>
        <TextBox x:Name="txtCompanyName" Margin="5" Grid.Row="0" Grid.Column="1"/>
        <Label Content="Contact Name:" Margin="5" Grid.Row="1" Grid.Column="0"/>
        <TextBox x:Name="txtContactName" Margin="5" Grid.Row="1" Grid.Column="1"/>
        <Label Content="Contact Title:" Margin="5" Grid.Row="2" Grid.Column="0"/>
        <TextBox x:Name="txtContactTitle" Margin="5" Grid.Row="2" Grid.Column="1"/>
        <Label Content="Address:" Margin="5" Grid.Row="3" Grid.Column="0"/>
        <TextBox x:Name="txtAddress" Margin="5" Grid.Row="3" Grid.Column="1"/>
        <Label Content="Phone:" Margin="5" Grid.Row="4" Grid.Column="0"/>
        <TextBox x:Name="txtPhone" Margin="5" Grid.Row="4" Grid.Column="1"/>
        <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="5">
            <Button x:Name="btnSave" Content="Save" Width="80" Margin="5" FontSize="15" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="80" Margin="5" FontSize="15" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
