<Window x:Class="LeTranBaoDuyWPF.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeTranBaoDuyWPF"
        mc:Ignorable="d"
        Title="LeTranBaoDuy-SE182424-AdminMainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="30" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Text="Admin Dashboard" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Button x:Name="btnCustomer" Content="Manage Customers" Width="200" Margin="0,5" Click="btnCustomer_Click" FontSize="15" />
            <Button x:Name="btnProduct" Content="Manage Products" Width="200" Margin="0,5" Click="btnProduct_Click" FontSize="15" />
            <Button x:Name="btnOrder" Content="Manage Orders" Width="200" Margin="0,5" Click="btnOrder_Click" FontSize="15" />
            <Button x:Name="btnReport" Content="Reports" Width="200" Margin="0,5" Click="btnReport_Click" FontSize="15" />
            <Button x:Name="btnLogout" Content="Logout" Width="200" Margin="0,20,0,0" Click="btnLogout_Click" FontSize="15" Background="#FFED0B0B" Foreground="#FFFDFDFD" />
        </StackPanel>
    </Grid>
</Window>
